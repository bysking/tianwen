{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "typeRoots": ["typings", "node_modules/@types"],
  }
}
